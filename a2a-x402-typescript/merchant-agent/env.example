# Merchant Wallet Configuration (Required)
# This is the wallet address that will receive payments
MERCHANT_WALLET_ADDRESS=0xYourMerchantWalletAddress

# Merchant Private Key (Required for facilitator)
# Private key for the merchant wallet (used for payment verification)
MERCHANT_PRIVATE_KEY=your_merchant_private_key_here

# Payment Network Configuration
# Network for payments (default: base-sepolia)
PAYMENT_NETWORK=base-sepolia

# USDC Contract Address
# USDC contract on Base Sepolia (default provided)
USDC_CONTRACT=0x036CbD53842c5426634e7929541eC2318f3dCF7e

# OpenRouter Configuration (Required)
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
OPENROUTER_MODEL=openai/gpt-4o

# RPC Configuration (Required for facilitator)
# Base Sepolia RPC URL - get one from Alchemy, Infura, or QuickNode
BASE_SEPOLIA_RPC_URL=https://base-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# Server Configuration
# Port where the merchant agent server will run
PORT=10000

